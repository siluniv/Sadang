{{!-- Show the `All Posts →` link --}}
<div class='o-grid'>
  <div class='o-grid__col o-grid__col--center o-grid__col--2-4-m o-grid__col--1-3-l'>
    <div class='c-pagination c-pagination--count-{{#get 'posts' limit='all'}}{{ posts.length }}{{/get}}'>
      <a href='{{ @site.url }}/blog/' class='c-btn c-btn--outline c-btn--full'>{{t 'All Posts →' }}</a>
    </div>
  </div>
</div>